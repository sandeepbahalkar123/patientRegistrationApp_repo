<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

                    <stroke android:width="2dp" android:color="@color/tab_unfilled_color" />

                    <size android:height="@dimen/textbox_height" />

                    <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:topLeftRadius="8dp" android:topRightRadius="8dp" />
                </shape>
            </item>
            <item android:right="15dp" android:end="15dp">
                <bitmap android:gravity="center_horizontal|right|end" android:src="@drawable/drop_down_arrow" />
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

                    <stroke android:width="2dp" android:color="@color/colorAccent" />

                    <size android:height="@dimen/textbox_height" />

                    <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:topLeftRadius="8dp" android:topRightRadius="8dp" />
                </shape>
            </item>
            <item android:right="15dp" android:end="15dp">
                <bitmap android:gravity="center_horizontal|right|end" android:src="@drawable/drop_down_arrow" />
            </item>
        </layer-list>
    </item>
</selector>